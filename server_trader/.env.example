# 长桥API配置
# 在长桥开发者平台申请: https://open.longportapp.com/
LONGPORT_APP_KEY=your_app_key_here
LONGPORT_APP_SECRET=your_app_secret_here
LONGPORT_ACCESS_TOKEN=your_access_token_here

# Telegram Bot配置
# 创建bot: 与 @BotFather 对话
# 获取chat_id: 与 @userinfobot 对话
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
TELEGRAM_ENABLED=true

# 监控配置
WATCHLIST=AAPL,00700.HK,TSLA
CHECK_TIME=06:00

# 强制只读模式（不执行交易）
DRY_RUN_MODE=true

# 日志级别
LOG_LEVEL=INFO
